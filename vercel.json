{
  "builds": [
    {
      "src": "page.tsx",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}
